<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/timerEndingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="ICC T20 WorldCup-2016"
            android:textColor="#00AAE8"
            android:textSize="35sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/timer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:background="#07000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="45dp">

            <TextView
                android:id="@+id/timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="Time Remaining"
                android:textColor="#00AAE8"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="35sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="#4E4B4F" />

                <TextView
                    android:id="@+id/textView_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="35sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="#4E4B4F" />

                <TextView
                    android:id="@+id/textView_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="35sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="#4E4B4F" />

                <TextView
                    android:id="@+id/textView_seconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="35sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_groups_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/material_green_solid"
            android:fontFamily="sans-serif-light"
            android:padding="35sp"
            android:text="Groups"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_fixtures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/material_green_solid"
            android:fontFamily="sans-serif-light"
            android:padding="35sp"
            android:text="Fixtures"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_watch_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/material_green_solid"
            android:fontFamily="sans-serif-light"
            android:padding="35sp"
            android:text="Live Scores"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

    </LinearLayout>

</ScrollView>
